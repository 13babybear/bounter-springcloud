<?xml version="1.0" encoding="UTF-8"?>
<configuration
	xmlns="http://ch.qos.logback/xml/ns/logback"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ch.qos.logback/xml/ns/logback https://raw.githubusercontent.com/enricopulatzo/logback-XSD/master/src/main/xsd/logback.xsd">
	
	<property name="LOG_HOME" value="/home/simon/logs" />
	
	<!-- 输出到控制台 -->
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<!-- 输出的格式 -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}:  %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 输出到滚动文件 -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 配置滚动的策略 -->
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 日志名称的格式 -->
			<fileNamePattern>${LOG_HOME}/bounter-oauth2.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- 保存的最长时间：天数 -->
			<MaxHistory>15</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}:  %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 打开mybatis日志, additivity='false'表示不继承父logger的配置 -->
	<logger name="cn.bounter.oauth2.dao" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<!-- 所有 logger 的根节点 -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>